<Page x:Class="MDK0402App.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MDK0402App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Логин:" Width="100"/>
                <TextBox x:Name="tbxLogin" MinWidth="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль:" Width="100"/>
                <PasswordBox x:Name="pbxPassword" MinWidth="150"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Пароль:" Width="100"/>
                <PasswordBox x:Name="pbxRePassword" MinWidth="150"/>
            </StackPanel>
            <Button x:Name="btnReg" Content="Регистрация" Width="150" Click="BtnRegClick"/>
        </StackPanel>
    </Grid>
</Page>
